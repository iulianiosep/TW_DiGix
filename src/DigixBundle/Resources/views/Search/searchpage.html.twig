        <script src="{{ asset('bundles/digix/js/ie-emulation-modes-warning.js') }}"></script>
    {% endjavascripts %}
  {% endblock %}
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
