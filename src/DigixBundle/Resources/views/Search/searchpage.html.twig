        <link rel="stylesheet" href="{{ asset('bundles/digix/css/styles.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/digix/css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/digix/css/modal.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/digix/css/mainCSS.css') }}" />
